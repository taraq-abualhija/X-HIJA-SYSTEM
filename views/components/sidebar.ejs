<div
id="sidebarId"
class="position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar"
>
<span style="right: 10px; top: 2px" class="position-absolute">
  <button class="btn" onclick="toggleSidebar()">
    <i  class="bi bi-x-circle"></i>
  </button>
</span>

<a
  href="/"
  class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
>
  <i class="bi bi-lightning-charge"></i>
  <span class="fs-4 sidebar-text">Welcome</span>
</a>
<hr>
<ul class="nav nav-pills flex-column mb-auto">
  <li class="nav-item">
    <a href="/home" class="nav-link text-white <%= value == "index" ? "active" : null %>" aria-current="page">
      <svg class="bi pe-none me-2" width="16" height="16">
        <use xlink:href="#home" />
      </svg>
      <span class="sidebar-text"> Home </span>
    </a>
  </li>

  <li>
    <a href="../user/add.html" class="nav-link text-white <%= value == "add" ? "active" : null %>">
      <svg class="bi pe-none me-2" width="16" height="16">
        <use xlink:href="#people-circle" />
      </svg>
      <span class="sidebar-text"> Add Customers </span>
    </a>
  </li>
</ul>
<hr />
<div class="dropdown">
  <a
    href="#"
    class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
    data-bs-toggle="dropdown"
    aria-expanded="false"
  >
    <img
      src="<%= userStatus.profileImg ?  userStatus.profileImg : "../imgs/avatar.png" %>"
      alt=""
      width="32"
      height="32"
      class="rounded-circle me-2"
    />
    <strong class="sidebar-text"><%= userStatus.username %></strong>
  </a>
  <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
    <li><a class="dropdown-item" href="#">New project...</a></li>
    <li><a class="dropdown-item" href="#">Settings</a></li>
    <li><button data-bs-toggle="modal" data-bs-target="#exampleModal" class="dropdown-item" href="#">Profile Picture</button></li>
    <li><hr class="dropdown-divider" /></li>
    <li><a class="dropdown-item" href="/signout">Sign out</a></li>
  </ul>
</div>
</div>
<div class="b-example-divider b-example-vr"></div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div  class="modal-dialog">
    <form action="/profile-update" method="post" enctype="multipart/form-data" class="modal-content">
      <div  class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Change Picture</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="px-4 modal-body d-flex justify-content-between align-items-center">
        <label  class="btn btn-secondary" for="inputFile"><i class="bi bi-plus"></i>Choose File</label>
       <input name="avatar" id="inputFile" style="display: none;" type="file">
       <img  id="profileImg"
      src="<%= userStatus.profileImg ?  userStatus.profileImg : "../imgs/avatar.png" %>" 
      alt="hello"
      style="border-radius: 50% ;"  
      width="150" height="150">
      </div> 
      <div class="modal-footer">    
        <button class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>
    </form>
  </div>
</div>

<script>
  
  inputFile.addEventListener("change", (eo) => {
    profileImg.src = URL.createObjectURL(eo.target.files[0])
 })
</script>